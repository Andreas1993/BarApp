<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.andreasp.myapp.MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background"
        />
    <TextView
        android:id="@+id/WelcomeText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#452907"
        android:layout_centerHorizontal="true"
        android:textSize="15dp"
        android:text="Welcome to the BeerWave bar app! here you will be able to find directions to the bar, manage your profile, keep up-to-date on events and find out what we offer in the bar!
        "
        android:gravity="center"
        android:textStyle="bold"/>
    <LinearLayout
        android:id="@+id/mainButtonArray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="440dp">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_weight="1">
            <Button style="@style/ButtonStyle"
                android:id="@+id/menuButton"
                android:onClick="clickButton"
                android:text="The Bar"/>

            <Button style="@style/ButtonStyle"
            android:id="@+id/ProfileButton"
            android:onClick="clickButton"
            android:text="Profile"></Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_weight="1">
            <Button style="@style/ButtonStyle"
            android:id="@+id/eventsButton"
            android:onClick="clickButton"
            android:text="Events"/>

            <Button style="@style/ButtonStyle"
            android:id="@+id/directionButton"
            android:background="@drawable/round_corners"
            android:text="Find us"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
